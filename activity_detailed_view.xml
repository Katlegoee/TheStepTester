<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/detailedStepsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detailed Daily Steps"
        android:textSize="18sp"
        android:paddingBottom="16dp" />

    <!-- Add TextViews or other UI elements to display daily steps data -->

    <Button
        android:id="@+id/highestStepsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Highest Steps" />

    <TextView
        android:id="@+id/highestSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day with highest steps: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/averageSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average steps per day: "
        android:textSize="16sp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Main Screen" />
</LinearLayout>
